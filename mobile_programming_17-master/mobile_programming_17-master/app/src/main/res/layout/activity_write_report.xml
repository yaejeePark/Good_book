<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".WriteReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--<textView-->
            <!--android:id="@+id/setTitle"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:text="독서록을 작성하고 싶은 책을 선택해주세요."/>-->
        <Spinner
            android:id="@+id/spTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
            android:hint="Title" />



        <EditText
            android:id="@+id/etContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:hint="내용을 입력해주세요."
            android:background="#dbe3e3"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/ivAddPic"
        />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/colorAccent"

                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/btnPic"
                android:text="앨범에서 불러오기"
                />

            <Button
                android:textColor="@color/colorAccent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btnPic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/btnPicDelete"
                android:text="사진 삭제하기"
                />

            <Button
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="right"
                android:text="저장"
                />



        </RelativeLayout>


    </LinearLayout>


</ScrollView>
